{
  "manifest_version": 3,
  "name": "LinkedIn Reply Extension",
  "version": "1.0",
  "description": "Generate replies for LinkedIn messages.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js" 
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/contentScript.js"] 
    }
  ],
  "icons": {
    "48": "ai-icon.svg" 
  }
}
