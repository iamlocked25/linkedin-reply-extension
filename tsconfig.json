{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react-jsx", 
      "outDir": "./build/content", // Output directory for compiled content scripts
      "rootDir": "./src",          // Where your TypeScript files are located
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["chrome"]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
